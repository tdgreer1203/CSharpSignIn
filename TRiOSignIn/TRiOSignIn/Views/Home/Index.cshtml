@model TRiOSignIn.Models.Student
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>TRiO SSS</h1>
    <p class="lead">Enter your student ID, or swipe your card to sign in. Remember to sign out on your way out.</p>
    <br/>
    <p class="center">
        @using (Html.BeginForm("Create", "Visits"))
        {
            <div class="form-group">
                <center>
                    @Html.TextBoxFor(c => c.StudentId, new { @class = "form-control centeredTB" })
                </center>
            </div>
            <br/>
            <center>
                <button type="submit" class="btn btn-warning" id="signInBtn">SUBMIT</button>
            </center>
        }
    </p>
    <br />
</div>

