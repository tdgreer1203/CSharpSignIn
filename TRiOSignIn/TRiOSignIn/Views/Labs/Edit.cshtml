@model TRiOSignIn.ViewModels.LabNewViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Lab</h2>

<br/>

@using (Html.BeginForm("Save", "Labs"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Lab.Name)
        @Html.TextBoxFor(m => m.Lab.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Lab.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Lab.Room)
        @Html.TextBoxFor(m => m.Lab.Room, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Lab.Room)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Lab.Building)
        @Html.DropDownListFor(m => m.Lab.BuildingId, new SelectList(Model.Buildings, "Id", "Name"), "Select Building", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Lab.Building)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Lab.Department)
        @Html.DropDownListFor(m => m.Lab.DepartmentId, new SelectList(Model.Departments, "Id", "Name"), "Select Department", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Lab.Department)
    </div>

    @Html.HiddenFor(m => m.Lab.Id)

    <br />

    <button type="submit" class="btn btn-info" id="detailBtn">SAVE</button>
    <a href="@Url.Action("Index", "Labs")" class="btn btn-danger" id="detailBtn">CANCEL</a>
}